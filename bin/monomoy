#!/bin/sh

MONOMOY_LIB=/usr/lib/monomoy
SCRIPT=$1

if [ "x${SCRIPT}" = "x" ]; then
    echo "Error in usage."
    SCRIPT='help'
fi

if [ ! -e ${MONOMOY_LIB}/${SCRIPT} ]; then
    echo "No such script: ${SCRIPT}"
    SCRIPT='help'
fi

MONOMOY_SCRIPT=${SCRIPT}

export MONOMOY_LIB
export MONOMOY_SCRIPT

${MONOMOY_LIB}/${SCRIPT} $@
